	<script type="text/javascript">
		var urlPreparacao = '#(URLPreparacao)#'
		var interval = null;

		// ************* DevExtreme - DataGrid ************* //
		// *************** System Processes *************** //
		function dataGridProcesses() {
			$("#divProcessesDataGrid").dxDataGrid({
				dataSource: new DevExpress.data.DataSource({
					store: new DevExpress.data.CustomStore({
						loadMode: "raw",
						load: function () {
							return $.getJSON(urlPreparacao, {
								method: "getProcessesInfo"
							});
						}
					})
				}),
				allowColumnResizing: true,
				columnResizingMode: "widget",
				columnAutoWidth: true,
				showColumnLines: true,
				showRowLines: true,
				rowAlternationEnabled: true,
				showBorders: true,
				sorting: {
					mode: "multiple"
				},
				filterRow: {
					visible: true,
					applyFilter: "auto"
				},
				searchPanel: {
					visible: true,
					width: 240,
					placeholder: "Search..."
				},
				headerFilter: {
					visible: true
				},
				columns: [{
					dataField: "Job#",
					dataType: "number"
				}, {
					dataField: "Pid",
					dataType: "number"
				}, {
					dataField: "DisplayPID",
					dataType: "number"
				}, "Username", "Device", "Nspace", "Routine", "CONTROL",
				{
					dataField: "Commands",
					dataType: "number"
				}, {
					dataField: "Globals",
					dataType: "number"
				}, "State", "Client Name", "EXE Name", "IP Address", "OSUserName", "SISTEMA"],
				paging: {
					pageSize: 20
				},
				pager: {
					showPageSizeSelector: true,
					allowedPageSizes: [20, 40, 60, 80, 100],
					showInfo: true
				},
				export: {
					enabled: true,
					fileName: "System Process"
				}
			});
		}

		function reloadProcesses(pInterval) {
			interval = setInterval(dataGridProcesses, pInterval);
		}

		$(document).ready(function () {

			var urlOrigin = window.location.origin;
			var newUrl = urlOrigin + "/csp/sys/UtilHome.csp"
			$("#urlPortal").attr("href", newUrl);

			dataGridProcesses();

			$("#btn-refresh").dxButton({
		        icon: "fas fa-sync",
		        onClick: function(e) {
		            dataGridProcesses();
		        }
		    });

		    $("#switch-refresh").dxSwitch({
		        value: false,
		        onValueChanged: function(data) {
			        if (data.value == true) {
				        $("#intervalField").dxNumberBox({
					       value: 5
					    });
			        } else {
				     	$("#intervalField").dxNumberBox({
					       value: ""
					    });
					   	clearInterval(interval);
			        }

		        }
		    });

		    $("#intervalField").dxNumberBox({
		        value: "",
		        min: 5,
		        placeholder: "seconds",
		        showSpinButtons: true,
		        width: 100,
		        onValueChanged: function(data) {
			        if (data.value != 0) {
				        clearInterval(interval);
				        reloadProcesses((data.value) * 1000);
			        }
		        }
		    });

		});
	</script>

